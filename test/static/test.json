{
    "project": "Minification Test Suite",
    "version": "1.2.0",
    "description": "A comprehensive test suite for evaluating file minification tools",
    "author": {
        "name": "Performance Team",
        "email": "perf@example.com",
        "organization": "Web Optimization Inc."
    },
    "created": "2023-06-15T08:30:00Z",
    "lastUpdated": "2023-06-20T14:45:00Z",
    "testConfigurations": [
        {
            "id": "config-html",
            "fileType": "html",
            "tools": [
                {
                    "name": "html-minifier",
                    "version": "4.0.0",
                    "options": {
                        "collapseWhitespace": true,
                        "removeComments": true,
                        "removeAttributeQuotes": false,
                        "minifyCSS": true,
                        "minifyJS": true
                    }
                },
                {
                    "name": "minify",
                    "version": "8.0.0",
                    "options": {
                        "html": {
                            "removeAttributeQuotes": true,
                            "removeOptionalTags": false
                        }
                    }
                }
            ],
            "testFiles": [
                "index.html",
                "template.html",
                "contact.html"
            ]
        },
        {
            "id": "config-css",
            "fileType": "css",
            "tools": [
                {
                    "name": "clean-css",
                    "version": "5.0.0",
                    "options": {
                        "level": 2,
                        "format": false,
                        "sourceMap": false
                    }
                },
                {
                    "name": "cssnano",
                    "version": "5.0.0",
                    "options": {
                        "preset": "default"
                    }
                }
            ],
            "testFiles": [
                "styles.css",
                "theme.css",
                "responsive.css"
            ]
        },
        {
            "id": "config-js",
            "fileType": "javascript",
            "tools": [
                {
                    "name": "terser",
                    "version": "5.0.0",
                    "options": {
                        "compress": true,
                        "mangle": true,
                        "output": {
                            "comments": false
                        }
                    }
                },
                {
                    "name": "uglify-js",
                    "version": "3.0.0",
                    "options": {
                        "toplevel": true,
                        "ie8": false
                    }
                }
            ],
            "testFiles": [
                "app.js",
                "utils.js",
                "analytics.js"
            ]
        }
    ],
    "testResults": {
        "html": {
            "originalTotalSize": 45.6,
            "minifiedTotalSize": 35.4,
            "averageReduction": "22.4%",
            "bestTool": "html-minifier",
            "bestReduction": "24.1%"
        },
        "css": {
            "originalTotalSize": 26.1,
            "minifiedTotalSize": 17.7,
            "averageReduction": "32.2%",
            "bestTool": "clean-css",
            "bestReduction": "33.5%"
        },
        "javascript": {
            "originalTotalSize": 37.2,
            "minifiedTotalSize": 21.3,
            "averageReduction": "42.7%",
            "bestTool": "terser",
            "bestReduction": "45.2%"
        }
    },
    "recommendations": [
        {
            "fileType": "html",
            "recommendedTool": "html-minifier",
            "recommendedOptions": {
                "collapseWhitespace": true,
                "removeComments": true,
                "minifyCSS": true,
                "minifyJS": true
            }
        },
        {
            "fileType": "css",
            "recommendedTool": "clean-css",
            "recommendedOptions": {
                "level": 2
            }
        },
        {
            "fileType": "javascript",
            "recommendedTool": "terser",
            "recommendedOptions": {
                "compress": true,
                "mangle": true
            }
        }
    ],
    "notes": [
        "All tests were performed on a standard development machine with average specifications",
        "File sizes are measured in kilobytes (KB)",
        "Reduction percentages are calculated from the original file sizes",
        "For SVG optimization, consider using SVGO with custom configuration for best results"
    ]
}
